generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
}

model User {
    id           String        @id @default(cuid())
    name         String?
    email        String        @unique
    password     String
    createdAt    DateTime      @default(now())
    updatedAt    DateTime      @updatedAt
    applications Application[]
    profile      Profile?
}

model Profile {
    id          String   @id @default(cuid())
    userId      String   @unique
    name        String
    email       String
    parentEmail String
    phoneNumber String
    address     String
    city        String
    state       String
    zipCode     String
    lab         String?
    country     String
    school      String
    gradeLevel  String
    forms       String[]
    user        User     @relation(fields: [userId], references: [id])
}

model Application {
    id         String   @id @default(cuid())
    userId     String   @unique
    experience String
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt
    user       User     @relation(fields: [userId], references: [id])
}
